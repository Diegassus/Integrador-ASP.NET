@model Inmobiliaria.Models.Login

@{
    ViewData["Title"] = "Hola Chuli";
}

<h1>Login</h1>

<h4>Inicia Sesion con tu cuenta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control">
                <span asp-validation-for="Usuario" class="test-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control">
                <span asp-validation-for="Clave" class="test-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="" asp-action="">Volver al inicio</a>
</div>

