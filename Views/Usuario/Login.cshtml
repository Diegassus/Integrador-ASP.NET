@model Inmobiliaria.Models.Login

@{
    ViewData["Title"] = "LogIn";
}


<div class="row" >
    <div class="col-md-4 offset-md-4 text-center mt-4 mb-4 shadow p-3 mb-5 bg-body-tertiary rounded" id="contenido">
        <h1>Login</h1>
        <hr />
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" placeholder="Usuario">
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" placeholder="ContraseÃ±a"/>
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-right-to-bracket"></i> Login</button>
            </div>
        </form>
        <div class="mt-3">
            <a asp-controller="" asp-action="">Volver al inicio</a>
        </div>
    </div>
</div>

