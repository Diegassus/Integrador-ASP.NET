@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Edit";
    IList<Inmueble> inmuebles = (IList<Inmueble>) ViewBag.Inmuebles;
    IList<Inquilino> inquilinos = (IList<Inquilino>) ViewBag.Inquilinos;
}

<h1>Editar</h1>

<h4>Contrato</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
        
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Desde" class="control-label"></label>
                <input asp-for="Desde" class="form-control" />
                <span asp-validation-for="Desde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hasta" class="control-label"></label>
                <input asp-for="Hasta" class="form-control" />
                <span asp-validation-for="Hasta" class="text-danger"></span>
            </div>
            
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Mensualidad" class="control-label"></label>
                <input asp-for="Mensualidad" class="form-control" />
                <span asp-validation-for="Mensualidad" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-4">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Estado" /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
        </div>
        <div class="col-md-4">
            
            <div class="form-group">
                <label asp-for="InmuebleId" class="control-label"></label>
                <select name="InmuebleId" class="form-control">
                    @foreach (var item in inmuebles)
                    {
                        @:<option @(item.Id == Model.Id ? "selected" : "" ) value="@item.Id">@item.Id | @item.Direccion</option>
                    }
                </select>
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InquilinoId" class="control-label"></label>
                <select name="InquilinoId" class="form-control">
                    @foreach (var item in inquilinos)
                    {
                        @:<option @(item.Id == Model.Id ? "selected" : "" ) value="@item.Id">@item.Apellido @item.Nombre</option>
                    }
                </select>
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>        
        </div>
        
        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary" >Guardar &nbsp;<i class="fa-solid fa-floppy-disk" style="color: #ffffff;"></i></button>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

